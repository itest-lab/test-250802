{
  "version": 2,
  "env": {
    "FIREBASE_SERVICE_ACCOUNT": "@firebase-service-account",
    "FIREBASE_PROJECT_ID":     "@firebase-project-id",
    "ENCRYPTION_KEY":          "@encryption-key"
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
